@model weatherSolutions.Models.SearchCity

@{
    ViewData["Title"] = "SearchCity";
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="cities" asp-action="SearchCity" class="btn btn-primary">Search</button>                
               
            </div>
                <button asp-controller="Home" asp-action="index" class="btn btn-warning">Return Home</button>
        </div>

    </form>

</div>